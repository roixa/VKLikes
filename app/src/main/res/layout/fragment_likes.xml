<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.roix.vklikes.LikesFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/base_padding"
            android:layout_margin="@dimen/base_padding"
            app:cardCornerRadius="@dimen/base_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_like_cv">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/ic_favorite_white_24dp" />

                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_toLeftOf="@id/fab1"
                    android:id="@+id/imageFirst"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/base_padding"
            android:layout_margin="@dimen/base_padding"
            app:cardCornerRadius="@dimen/base_padding"

            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_like_cv">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/ic_favorite_white_24dp" />

                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_toLeftOf="@id/fab2"
                    android:id="@+id/imageSecond"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/base_padding"
            android:layout_margin="@dimen/base_padding"
            app:cardElevation="@dimen/base_padding"
            android:layout_width="match_parent"
            android:layout_height="@dimen/photo_like_cv">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/fab3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_margin="16dp"
                    android:layout_alignParentRight="true"
                    android:clickable="true"
                    android:src="@drawable/ic_favorite_white_24dp" />

                <ImageView
                    android:scaleType="fitCenter"
                    android:layout_toLeftOf="@id/fab3"
                    android:id="@+id/imageThird"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>
</RelativeLayout>
