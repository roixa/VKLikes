<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.roix.vklikes.ProfileFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/base_padding"
            android:layout_margin="@dimen/base_padding"
            app:cardCornerRadius="@dimen/base_padding"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:padding="@dimen/base_padding"
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/userPhoto"
                    android:layout_width="@dimen/circle_photo_size"
                    android:layout_height="@dimen/circle_photo_size"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/colorPrimary"/>

                <TextView
                    android:id="@+id/userName"

                    android:padding="@dimen/base_padding"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/userPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large" />
                <TextView
                    android:id="@+id/userInfo"
                    android:padding="@dimen/base_padding"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/userName"
                    android:layout_toRightOf="@id/userPhoto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            app:cardElevation="@dimen/base_padding"
            android:layout_margin="@dimen/base_padding"
            app:cardCornerRadius="@dimen/base_padding"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/usersStats"

                    android:padding="@dimen/base_padding"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Medium" />
                <TextView
                    android:id="@+id/userRating"
                    android:padding="@dimen/base_padding"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/usersStats"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@android:style/TextAppearance.Large" />


            </RelativeLayout>
        </android.support.v7.widget.CardView>


    </LinearLayout>

</FrameLayout>
